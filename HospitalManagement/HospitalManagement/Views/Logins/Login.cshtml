@model LoginModel
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>

    /* PAGE */
    body {
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #eef2f7;
        font-family: "Segoe UI",sans-serif;
    }


    /* CARD */
    .login-container {
        width: 750px;
        height: 420px;
        display: flex;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 20px 45px rgba(0,0,0,.12);
        background: white;
    }


    /* LEFT SIDE */
    .left-panel {
        width: 45%;
        background: linear-gradient(135deg,#2563eb,#4f46e5);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        text-align: center;
    }

        .left-panel i {
            font-size: 55px;
            margin-bottom: 15px;
        }

        .left-panel h2 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .left-panel p {
            font-size: 14px;
            opacity: .85;
        }


    /* RIGHT SIDE */
    .right-panel {
        width: 55%;
        padding: 45px 40px;
    }


    /* TITLE */
    .login-title {
        font-weight: 700;
        font-size: 22px;
        margin-bottom: 25px;
    }


    /* INPUT */
    .input-box {
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 10px 14px;
        margin-bottom: 18px;
        display: flex;
        align-items: center;
        transition: .2s;
    }

        .input-box:focus-within {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,.15);
        }

        .input-box i {
            color: #9ca3af;
            margin-right: 10px;
        }

        .input-box input {
            border: none;
            outline: none;
            width: 100%;
            font-size: 15px;
        }


    /* BUTTON */
    .login-btn {
        width: 100%;
        border: none;
        border-radius: 10px;
        padding: 11px;
        font-weight: 600;
        background: #2563eb;
        color: white;
        transition: .25s;
    }

        .login-btn:hover {
            background: #1e40af;
        }


    /* ERROR */
    .error-msg {
        text-align: center;
        color: #dc2626;
        margin-top: 12px;
        font-size: 14px;
    }


    /* FOOTER */
    .footer {
        text-align: center;
        margin-top: 20px;
        font-size: 13px;
        color: #9ca3af;
    }

</style>



<div class="login-container">

    <!-- LEFT SIDE -->
    <div class="left-panel">
        <i class="fa-solid fa-hospital"></i>
        <h2>Hospital</h2>
        <p>Secure Management Portal<br />Authorized Staff Only</p>
    </div>


    <!-- RIGHT SIDE -->
    <div class="right-panel">

        <div class="login-title">Sign in to continue</div>

        <form method="post">

            <div class="input-box">
                <i class="fa-solid fa-user"></i>
                <input asp-for="Username" placeholder="Username" />
            </div>
            <span asp-validation-for="Username" class="text-danger small"></span>


            <div class="input-box">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="Password" type="password" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger small"></span>


            <button class="login-btn mt-2">Login</button>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="error-msg">
                    @TempData["ErrorMessage"]
                </div>
            }

        </form>

        <div class="footer">
            © @DateTime.Now.Year Hospital Management System
        </div>

    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}