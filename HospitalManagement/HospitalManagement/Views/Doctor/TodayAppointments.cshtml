@model List<HospitalManagement.ViewModels.DoctorAppointmentVM>
@{
    ViewData["Title"] = "Medicine Management";
    Layout = "~/Views/Shared/_Doctor.cshtml";
}

<style>

    /* PROFESSIONAL ACTION BUTTON */
    .action-btn {
        background: #2563eb;
        color: white;
        border: none;
        padding: 6px 18px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        transition: .2s;
    }

        .action-btn:hover {
            background: #1e40af;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(37,99,235,.35);
        }

</style>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2 class="mb-3">Today's Appointments</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Token</th>
            <th>Patient</th>
            <th>Gender</th>
            <th>Contact</th>
            <th>Time</th>
            <th>Status</th>
            <th width="240">Action</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TokenNo</td>
                <td>@item.PatientName</td>
                <td>@item.Gender</td>
                <td>@item.Contact</td>
                <td>@item.SlotTime</td>

                <td>
                    @if (item.StatusName == "Completed")
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@item.StatusName</span>
                    }
                </td>

                <td>

                    @* BEFORE CONSULTATION *@
                    @if (item.StatusName != "Completed")
                    {
                        <button class="action-btn openModal"
                                data-id="@item.AppointmentId">
                            Consultation
                        </button>
                    }

                    @* AFTER CONSULTATION *@
                    else
                    {
                        <button class="action-btn openMedicineModal"
                                data-id="@item.AppointmentId">
                            Medicine
                        </button>

                        <button class="action-btn ms-1 openLabModal"
                                data-id="@item.AppointmentId">
                            Lab Test
                        </button>
                    }

                </td>

            </tr>
        }

    </tbody>
</table>



<!-- CONSULTATION MODAL -->
<div class="modal fade" id="consultationModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-action="AddConsultation">

                <div class="modal-header bg-primary text-white">
                    <h5>Add Consultation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="AppointmentId" id="appointmentId" />

                    <div class="mb-3">
                        <label>Symptoms</label>
<textarea name="Symptoms" class="form-control" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label>Diagnosis</label>
<textarea name="Diagnosis" class="form-control" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label>Doctor Notes</label>
<textarea name="DoctorNotes" class="form-control"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Consultation</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>

            </form>

        </div>
    </div>
</div>



<!-- MEDICINE MODAL -->
<div class="modal fade" id="medicineModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-action="AddMedicine">

                <div class="modal-header bg-success text-white">
                    <h5>Add Medicine</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="AppointmentId" id="medAppointmentId" />

                    <div class="mb-3">
                        <label>Medicine</label>
                        <select name="MedicineId" class="form-control" required>
                            <option value="">-- Select Medicine --</option>
                            @foreach (var m in ViewBag.Medicines)
                            {
                                <option value="@m.MedicineId">@m.MedicineName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>Frequency (per day)</label>
                        <input type="number" name="Frequency" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Duration (days)</label>
                        <input type="number" name="DurationDays" class="form-control" required />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add Medicine</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>

            </form>

        </div>
    </div>
</div>



<!-- LAB TEST MODAL -->
<div class="modal fade" id="labTestModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-action="AddLabTest">

                <div class="modal-header bg-info text-white">
                    <h5>Add Lab Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="AppointmentId" id="labAppointmentId" />

                    <div class="mb-3">
                        <label>Lab Test</label>
                        <select name="LabTestId" class="form-control" required>
                            <option value="">-- Select Test --</option>
                            @foreach (var t in ViewBag.LabTests)
                            {
                                <option value="@t.LabTestId">@t.TestName</option>
                            }
                        </select>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add Test</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>

            </form>

        </div>
    </div>
</div>



<!-- SCRIPTS -->
<script>
    document.querySelectorAll(".openModal").forEach(btn=>{
    btn.addEventListener("click",function(){
    document.getElementById("appointmentId").value=this.dataset.id;
    new bootstrap.Modal(document.getElementById("consultationModal")).show();
    });
    });

    document.querySelectorAll(".openMedicineModal").forEach(btn=>{
    btn.addEventListener("click",function(){
    document.getElementById("medAppointmentId").value=this.dataset.id;
    new bootstrap.Modal(document.getElementById("medicineModal")).show();
    });
    });

    document.querySelectorAll(".openLabModal").forEach(btn=>{
    btn.addEventListener("click",function(){
    document.getElementById("labAppointmentId").value=this.dataset.id;
    new bootstrap.Modal(document.getElementById("labTestModal")).show();
    });
    });
</script>