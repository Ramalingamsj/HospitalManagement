<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Doctor Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f4f6f9;
        }

        .nav-link {
            font-weight: 500;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

            .nav-link.active {
                color: #0d6efd !important;
                font-weight: 600;
            }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">

            <!-- BRAND -->
            <span class="navbar-brand fw-bold">
                🩺 Doctor Panel
            </span>

            <!-- MOBILE MENU -->
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU -->
            <div class="collapse navbar-collapse" id="nav">

                <ul class="navbar-nav ms-auto align-items-center">

                    <!-- Appointments -->
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.Value.Contains("TodayAppointments") ? "active" : "")"
                           asp-controller="Doctor"
                           asp-action="TodayAppointments">
                            
                        </a>
                    </li>

                    <!-- Divider -->
                    <li class="nav-item mx-2 text-white"></li>

                    <!-- Username -->
                    @* <li class="nav-item text-white me-3 fw-semibold">
                        👤 @Context.Request.Cookies["UserName"]
                    </li> *@

                    <!-- Logout -->
                    <li class="nav-item">
                        <a class="btn btn-danger btn-sm px-3"
                           asp-controller="Logins"
                           asp-action="Login">
                            Logout
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- PAGE BODY -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>