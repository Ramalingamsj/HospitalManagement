@using HospitalManagement.ViewModel
@model IEnumerable<PharmacyPendingVM>

@{
    ViewData["Title"] = "Pending Medicines";
    Layout = "~/Views/Shared/_PharmacyLayout.cshtml";
}

<style>
    .page-card {
        background: white;
        border-radius: 12px;
        padding: 22px;
        box-shadow: 0 4px 14px rgba(0,0,0,.05);
    }

    .action-btn {
        background: #2563eb;
        color: white;
        border: none;
        padding: 6px 16px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

        .action-btn:hover {
            background: #1e40af;
        }

    .badge-low {
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-ok {
        background: #dcfce7;
        color: #166534;
    }
</style>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="container mt-4">

    <h3 class="mb-3">Pending Medicines</h3>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No pending patients
        </div>
    }
    else
    {
        @foreach (var group in Model.GroupBy(x => x.ConsultationId))
        {
            var allIssued = group.All(m => m.StatusId == 7);
            var billExists = ViewBag.GeneratedBills[group.Key];

            <div class="page-card mb-4">

                <h6 class="mb-3 fw-bold">
                    Consultation #@group.Key — @group.First().PatientName
                </h6>

                <table class="table table-bordered table-striped align-middle">

                    <thead class="table-dark">
                        <tr>
                            <th>Medicine</th>
                            <th>Frequency</th>
                            <th>Days</th>
                            <th>Stock</th>
                            <th width="160">Action</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in group)
                        {
                            <tr>

                                <td class="fw-semibold">@item.MedicineName</td>
                                <td>@item.Frequency</td>
                                <td>@item.DurationDays</td>

                                <td>
                                    @if (item.Stock <= 10)
                                    {
                                        <span class="badge badge-low">@item.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-ok">@item.Stock</span>
                                    }
                                </td>

                                <td>
                                    @if (item.StatusId == 7)
                                    {
                                        <span class="badge bg-success w-100">Issued</span>
                                    }
                                    else
                                    {
                                        <a asp-action="Issue"
                                           asp-route-id="@item.PatientMedicineId"
                                           class="action-btn w-100">
                                            Issue
                                        </a>
                                    }
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>


                <div class="text-end mt-3">

                    @if (billExists)
                    {
                        <span class="badge bg-success me-2">Bill Generated</span>

                        <a asp-action="DownloadBill"
                           asp-route-id="@group.Key"
                           class="btn btn-outline-primary">
                            Download PDF
                        </a>
                    }
                    else if (!allIssued)
                    {
                        <button class="btn btn-secondary" disabled>
                            Issue All Medicines First
                        </button>
                    }
                    else
                    {
                        <a asp-action="GenerateBill"
                           asp-route-id="@group.Key"
                           class="btn btn-primary">
                            Generate Bill
                        </a>
                    }

                </div>

            </div>
        }
    }

</div>